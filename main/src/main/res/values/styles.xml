<resources>
    <!--switch theme-->
    <style name="BrandedSwitch.control" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#e6e600</item>
        <!--<item name="colorSwitchThumbNormal">#cc0000</item>-->
    </style>
    <!--switch text theme-->
    <style name="BrandedSwitch.text" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">8dp</item>
    </style>
    <style name="scrollbar_style">
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbarThumbVertical">@color/dark_gray</item>
    </style>

    <style name="BottomDialogAnim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/translation_enter_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/translation_exit_to_bottom</item>
    </style>

    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/activity_open</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/activity_exit</item>
        <!-- 指定消失的动画xml -->
    </style>
</resources>
