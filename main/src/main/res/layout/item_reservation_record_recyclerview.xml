<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sp_9"
        android:layout_marginBottom="@dimen/sp_9"
        android:background="@drawable/item_child_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/huzhu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_15"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textColor="@color/color_494949"
                android:textSize="@dimen/sp_24"
                tool:text="户主" />

            <ImageView
                android:id="@+id/sex_img"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/sp_16"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@drawable/sex_man" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.xiaoanjujia.common.widget.alphaview.AlphaButton
                android:id="@+id/item_vis_btn_status"
                android:layout_width="@dimen/dp_59"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/bg_shap_button_fang_ke"
                android:gravity="center"
                android:text="未来访"
                android:textColor="#EF693C"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_16"
            android:background="@drawable/zhi_xian_line1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/sp_14"
                android:layout_gravity="center"
                android:src="@drawable/shi_jian_icon_fang_ke" />

            <TextView
                android:id="@+id/lai_fang_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_7"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/color_adadad"
                android:textSize="@dimen/sp_14"
                tool:text="2020-08-25  18:45 ~ 2020-08-26  18:45" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/sp_14"
                android:layout_gravity="center"
                android:src="@drawable/mess_phone_icon" />

            <TextView
                android:id="@+id/id_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_7"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/color_adadad"
                android:textSize="@dimen/sp_14"
                tool:text="141125********0058" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_16"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/sp_17"
                android:layout_gravity="center"
                android:src="@drawable/p_icon_fang_ke" />

            <TextView
                android:id="@+id/id_car_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_7"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/color_adadad"
                android:textSize="@dimen/sp_14"
                tool:text="141125********0058" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>