<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cube_ptr="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/jkx_public_title_home" />

    <com.xiaoanjujia.common.widget.headerview.JDHeaderView
        android:id="@+id/find_pull_refresh_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="300"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.0"
        cube_ptr:ptr_resistance="2.0">

        <com.xiaoanjujia.common.util.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_f5f5f5"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/invitation_particulars_of_matter_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_28"
                    android:background="@drawable/data_analysis"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_18"
                    android:paddingRight="@dimen/dp_18">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_18"
                    android:paddingRight="@dimen/dp_18">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_19"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp_18"
                        android:paddingRight="@dimen/dp_18">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="粉丝新增数量"
                            android:textColor="@color/color_494949"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_new_add_fans_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_11"
                            android:text="0"
                            android:textColor="@color/bg_red"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_19"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp_18"
                        android:paddingRight="@dimen/dp_18">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累计粉丝数量"
                            android:textColor="@color/color_494949"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_total_add_fans_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_11"
                            android:text="0"
                            android:textColor="@color/bg_red"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_29"
                    android:layout_marginRight="@dimen/dp_18"
                    android:background="@drawable/ju_xing"
                    android:orientation="vertical">



                    <LinearLayout
                        android:id="@+id/invitation_leave_time_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_19"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_24"
                        android:paddingRight="@dimen/dp_24">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_weight="1"
                            android:text="今日时时"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_by_the_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_8"
                            android:text="截止"
                            android:textColor="@color/color_5f5f5f"
                            android:textSize="@dimen/sp_12" />

                        <com.xiaoanjujia.common.widget.alphaview.AlphaButton
                            android:id="@+id/refresh_data_btn"
                            android:layout_width="@dimen/dp_41"
                            android:layout_height="@dimen/sp_19"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/bg_shap_button_black"
                            android:gravity="center"
                            android:text="刷新"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_5"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_24"
                        android:background="#D1D1D1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_15"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_18"
                        android:paddingRight="@dimen/dp_18">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="访客 (人)"
                                android:textColor="@color/color_626262"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/tv_visitor_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_11"
                                android:text="0"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/sp_15"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/dp_0_5"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp_16"
                            android:background="#D1D1D1" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="点赞 (个)"
                                android:textColor="@color/color_626262"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/tv_like_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_11"
                                android:text="0"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/sp_15"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/dp_0_5"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp_16"
                            android:background="#D1D1D1" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="评论 (个)"
                                android:textColor="@color/color_626262"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/tv_com_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_11"
                                android:text="0"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/sp_15"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/dp_0_5"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp_16"
                            android:background="#D1D1D1" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="联系 (个)"
                                android:textColor="@color/color_626262"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/tv_contact_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_11"
                                android:text="0"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/sp_15"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_5"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_18"
                        android:background="#D1D1D1" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_19"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_18"
                        android:paddingRight="@dimen/dp_18">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="单位:小时"
                            android:textColor="@color/color_494949"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/day_yesterday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_20"
                            android:padding="@dimen/dp_3"
                            android:text="昨日"
                            android:textColor="#FF3333"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/day_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="7.5dp"
                            android:padding="@dimen/dp_3"
                            android:text="今日"
                            android:textColor="@color/color_494949"
                            android:textSize="@dimen/sp_15" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_5"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_marginTop="@dimen/dp_174"
                        android:layout_marginRight="@dimen/dp_18"
                        android:background="#D1D1D1" />

                    <LinearLayout
                        android:id="@+id/immediate_promotion_ll"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_39"
                        android:layout_marginLeft="@dimen/sp_17"
                        android:layout_marginTop="@dimen/dp_19"
                        android:layout_marginRight="@dimen/sp_17"
                        android:background="@drawable/bg_shap_button_immediate_promotion"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_24"
                        android:paddingRight="@dimen/dp_24">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="客户不够      多看这里?"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14" />


                        <com.xiaoanjujia.common.widget.alphaview.AlphaButton
                            android:id="@+id/immediate_promotion_btn"
                            android:layout_width="@dimen/dp_85"
                            android:layout_height="@dimen/dp_29"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/bg_shap_button_1"
                            android:gravity="center"
                            android:text="立即推广"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_19"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_18"
                        android:paddingRight="@dimen/dp_18">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="@dimen/dp_3"
                            android:text="客户分析"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_count_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_20"
                            android:padding="@dimen/dp_3"
                            android:text="统计时间:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_19"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_18"
                        android:paddingRight="@dimen/dp_18">

                        <TextView
                            android:id="@+id/tv_count_num1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="昨日联系客户:"
                            android:textColor="@color/color_585858"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_count_num2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="昨日访客数:"
                            android:textColor="@color/color_585858"
                            android:textSize="@dimen/sp_14" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_13"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_18"
                        android:paddingRight="@dimen/dp_18">

                        <TextView
                            android:id="@+id/tv_count_num3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="昨日浏览次数:"
                            android:textColor="@color/color_585858"
                            android:textSize="@dimen/sp_14" />


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </com.xiaoanjujia.common.util.MyScrollView>
    </com.xiaoanjujia.common.widget.headerview.JDHeaderView>

</LinearLayout>