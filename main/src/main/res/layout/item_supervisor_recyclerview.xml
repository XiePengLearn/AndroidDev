<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_supervisor_image_one"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_58"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_7"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/item_supervisor_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginEnd="@dimen/dp_47"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="3"
            android:text="联系号码："
            android:textColor="@color/color_494949"
            android:textSize="@dimen/sp_12"
            tool:text="小区东角出现漏水小区东角出现漏水小区东角出现漏水小区东角出现漏水小区东角出现漏水小区东角出现漏水小区东角出现漏水小区东角出现漏水小区东角出现漏水小区东角出现漏水" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_26"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_supervisor_time_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/sp_7"
                    tool:text="2020-06-16 12：00" />

                <TextView
                    android:id="@+id/item_supervisor_week_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/sp_7"
                    tool:text="周二" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="发布人："
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/sp_7" />

                <TextView
                    android:id="@+id/item_supervisor_publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/sp_7"
                    tool:text="综合维修工" />

            </LinearLayout>
        </LinearLayout>

        <com.xiaoanjujia.common.widget.alphaview.AlphaButton
            android:id="@+id/item_supervisor_btn_status"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginEnd="@dimen/dp_7"
            android:background="@drawable/bg_shap_button_3"
            android:gravity="center"
            android:text="返回主页"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_7" />

    </RelativeLayout>

</LinearLayout>