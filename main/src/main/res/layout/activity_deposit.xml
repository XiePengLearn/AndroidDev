<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_knowledge_publish_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    >

    <include layout="@layout/jkx_public_title_home" />


    <com.xiaoanjujia.common.util.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_19"
                android:paddingLeft="@dimen/dp_18"
                android:paddingRight="@dimen/dp_18">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值金额（元）:"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/sp_17" />

                <EditText
                    android:id="@+id/edit_post_message_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@null"

                    android:cursorVisible="true"
                    android:gravity="left|center_vertical"
                    android:hint="请输入充值金额"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#494949"
                    android:textColorHint="#C5C3C3"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_18"
                android:background="#D1D1D1" />

            <LinearLayout
                android:id="@+id/ll_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_18"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_current_money_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_18"
                    android:gravity="center_vertical"
                    android:text="  最低充值金额：￥100   "
                    android:textColor="@color/color_b8b8b8"
                    android:textSize="@dimen/sp_14" />


            </LinearLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_22"
                android:text="备注(50字)"
                android:textColor="@color/color_494949"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_18"
                android:background="@drawable/bg_shape_button_select_id_name"
                android:orientation="vertical"
                android:visibility="visible">

                <EditText
                    android:id="@+id/edit_post_message_des"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="start"
                    android:hint="(选填)"
                    android:maxLength="140"
                    android:text=""
                    android:textColor="#494949"
                    android:textColorHint="#C5C3C3"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_28"
                android:layout_marginRight="@dimen/dp_18"
                android:background="#D1D1D1" />

            <LinearLayout
                android:id="@+id/post_message_visiting_time_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:orientation="horizontal"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dp_18"
                android:paddingRight="@dimen/dp_18">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="充值方式:"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/post_message_visiting_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16"
                    android:gravity="right"
                    android:hint="请选择"
                    android:textColor="@color/color_494949"
                    android:textColorHint="@color/color_C5C3C3"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/arrows_icon_right_orientation" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_18"
                android:background="#D1D1D1" />
            <com.xiaoanjujia.common.widget.alphaview.AlphaButton
                android:id="@+id/post_message_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_28"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_32"
                android:background="@drawable/bg_shap_button_1"
                android:gravity="center"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:text="立即充值"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </com.xiaoanjujia.common.util.MyScrollView>


</LinearLayout>