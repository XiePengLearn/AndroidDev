<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/dialog_all_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/dialog_choice_else_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dime_me_menu_item_height"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:text="其他"
                    android:textColor="@color/base_font_color_32333D"
                    android:textSize="@dimen/dime_me_menu_item_font_size" />

            </LinearLayout>


            <ImageView
                android:id="@+id/dialog_choice_else_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/shape_change_region_no_checked" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#D1D1D1" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_choice_work_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dime_me_menu_item_height"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:text="工作"
                    android:textColor="@color/base_font_color_32333D"
                    android:textSize="@dimen/dime_me_menu_item_font_size" />

            </LinearLayout>


            <ImageView
                android:id="@+id/dialog_choice_work_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/shape_change_region_no_checked" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#D1D1D1" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_choice_see_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dime_me_menu_item_height"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:text="拜访"
                    android:textColor="@color/base_font_color_32333D"
                    android:textSize="@dimen/dime_me_menu_item_font_size" />

            </LinearLayout>


            <ImageView
                android:id="@+id/dialog_choice_see_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/shape_change_region_no_checked" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#D1D1D1" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_choice_take_out_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dime_me_menu_item_height"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:text="外卖"
                    android:textColor="@color/base_font_color_32333D"
                    android:textSize="@dimen/dime_me_menu_item_font_size" />

            </LinearLayout>


            <ImageView
                android:id="@+id/dialog_choice_take_out_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/shape_change_region_no_checked" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#D1D1D1" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_choice_express_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dime_me_menu_item_height"
            android:layout_marginBottom="25dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:text="快递"
                    android:textColor="@color/base_font_color_32333D"
                    android:textSize="@dimen/dime_me_menu_item_font_size" />

            </LinearLayout>


            <ImageView
                android:id="@+id/dialog_choice_express_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/shape_change_region_no_checked" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#D1D1D1" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>