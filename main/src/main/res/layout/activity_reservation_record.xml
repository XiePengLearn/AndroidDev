<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cube_ptr="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5">

    <LinearLayout
        android:id="@+id/title_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <View
            android:id="@+id/fake_status_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25" />

        <LinearLayout
            android:id="@+id/main_title_container"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_title_back"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/sp_13"
                android:src="@drawable/register_back" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginEnd="@dimen/dp_18"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fang_ke_record"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:lines="1"
                    android:text="访客记录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lai_fang_record"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_31"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:text="来访记录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="normal" />


            </LinearLayout>

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/sp_13" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_date_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_ll"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18"
        android:visibility="visible">


        <TextView
            android:id="@+id/select_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-08-25"
            android:textColor="@color/color_494949"
            android:textSize="@dimen/sp_17" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/jian_tou_xiang_xia" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_date_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_ll"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18"
        android:visibility="gone">


        <TextView
            android:id="@+id/select_date_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-08-25"
            android:textColor="@color/color_494949"
            android:textSize="@dimen/sp_17" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/jian_tou_xiang_xia" />


    </LinearLayout>

    <com.xiaoanjujia.common.widget.headerview.JDHeaderView
        android:id="@+id/find_pull_refresh_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/select_date_ll"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:visibility="visible"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="300"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.0"
        cube_ptr:ptr_resistance="2.0">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:overScrollMode="never"
            android:visibility="visible" />


    </com.xiaoanjujia.common.widget.headerview.JDHeaderView>

    <com.xiaoanjujia.common.widget.headerview.JDHeaderView
        android:id="@+id/find_pull_refresh_header2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/select_date_ll2"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:visibility="gone"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="300"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.0"
        cube_ptr:ptr_resistance="2.0">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_list2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:overScrollMode="never"
            android:visibility="visible" />


    </com.xiaoanjujia.common.widget.headerview.JDHeaderView>

    <RelativeLayout
        android:id="@+id/rl_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_date_ll"
        android:layout_centerInParent="true"

        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/no_data_img"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:background="@drawable/message_empty_no_data_vis" />

            <TextView
                android:id="@+id/no_data_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_95"
                android:text="暂无预约记录"
                android:textColor="#767676"
                android:textSize="@dimen/sp_17"
                android:textStyle="normal" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>