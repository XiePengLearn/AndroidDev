<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cube_ptr="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/jkx_public_title_home" />

    <com.xiaoanjujia.common.widget.headerview.JDHeaderView
        android:id="@+id/find_pull_refresh_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="300"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.0"
        cube_ptr:ptr_resistance="2.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/tenement_department_head_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_27"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_93"
                    android:src="@drawable/tenement_department_head" />

                <com.xiaoanjujia.common.widget.alphaview.AlphaButton
                    android:id="@+id/tenement_department_head_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_42"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30"
                    android:background="@drawable/bg_shape_button_tenement"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="我是物业主管"
                    android:textColor="@color/color_9f9f9f"
                    android:textSize="@dimen/sp_17" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tenement_personnel_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_27"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_93"
                    android:src="@drawable/tenement_personnel" />

                <com.xiaoanjujia.common.widget.alphaview.AlphaButton
                    android:id="@+id/tenement_personnel_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_42"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30"
                    android:background="@drawable/bg_shape_button_tenement"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="我是物业人员"
                    android:textColor="@color/color_9f9f9f"
                    android:textSize="@dimen/sp_17" />
            </RelativeLayout>
        </LinearLayout>
    </com.xiaoanjujia.common.widget.headerview.JDHeaderView>
</LinearLayout>