<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_18"
        android:background="@drawable/item_child_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_supervisor_image_one"
                android:layout_width="@dimen/dp_71"
                android:layout_height="@dimen/dp_71"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/item_supervisor_content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_47"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="2"
                android:textColor="@color/color_494949"
                android:textSize="@dimen/sp_14"
                tool:text="北京搬家，透明收费，服务满意付款，快速上门，大型搬家公司" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_93"
            android:layout_marginTop="@dimen/dp_52"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/sp_14"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/dp_19"

                    android:layout_height="@dimen/dp_19"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/item_supervisor_time_date"
                        android:layout_width="@dimen/sp_19"
                        android:layout_height="@dimen/sp_19"
                        android:src="@drawable/comment_icon" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/comment_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_494949"
                        android:textSize="@dimen/sp_7" />


                </LinearLayout>
            </LinearLayout>

            <com.xiaoanjujia.common.widget.alphaview.AlphaButton
                android:id="@+id/item_item_community_btn_1"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginEnd="@dimen/dp_7"
                android:background="@drawable/bg_shap_button_3"
                android:gravity="center"
                android:text="快速上门"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_7" />

            <com.xiaoanjujia.common.widget.alphaview.AlphaButton
                android:id="@+id/item_item_community_btn_2"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_14"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_9"
                android:layout_toEndOf="@id/item_item_community_btn_1"
                android:background="@drawable/bg_shap_button_3_3"
                android:gravity="center"
                android:text="有红包领"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_7" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>