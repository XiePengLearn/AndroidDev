<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_knowledge_publish_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <include layout="@layout/jkx_public_title_home" />


    <com.xiaoanjujia.common.util.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="748dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="628dp"
                android:layout_margin="@dimen/dp_12"
                android:background="@drawable/permit_bg_icon"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/invitation_leave_time_ll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_32"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_18"
                    android:paddingRight="@dimen/dp_18">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_32"
                        android:text="访客姓名"
                        android:textColor="@color/color_adadad"
                        android:textSize="@dimen/dp_14" />

                    <TextView
                        android:id="@+id/invitation_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_39"
                        android:layout_marginRight="@dimen/dp_16"
                        android:text=""
                        android:textColor="@color/color_494949"
                        android:textSize="@dimen/dp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_18"
                    android:paddingRight="@dimen/dp_18">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_32"
                        android:text="车牌号"
                        android:textColor="@color/color_adadad"
                        android:textSize="@dimen/dp_14" />

                    <TextView
                        android:id="@+id/invitation_card_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_39"
                        android:layout_marginRight="@dimen/dp_16"
                        android:text=""
                        android:textColor="@color/color_494949"
                        android:textSize="@dimen/dp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_18"
                    android:paddingRight="@dimen/dp_18">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_32"
                        android:text="预计来访时间"
                        android:textColor="@color/color_adadad"
                        android:textSize="@dimen/dp_14" />

                    <TextView
                        android:id="@+id/invitation_vis_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_39"
                        android:text=""
                        android:textColor="@color/color_494949"
                        android:textSize="@dimen/dp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_18"
                    android:paddingRight="@dimen/dp_18">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_32"
                        android:text="预计离开时间"
                        android:textColor="@color/color_adadad"
                        android:textSize="@dimen/dp_14" />

                    <TextView
                        android:id="@+id/invitation_leave_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_39"
                        android:text=""
                        android:textColor="@color/color_494949"
                        android:textSize="@dimen/dp_14" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/betslip_share_mid_line" />


                <ImageView
                    android:id="@+id/qr_code_iv"
                    android:layout_width="@dimen/dp_292"
                    android:layout_height="@dimen/dp_292"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_28"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_icon" />

                <com.xiaoanjujia.common.widget.alphaview.AlphaButton
                    android:id="@+id/generate_visitor_card"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_22"
                    android:layout_height="@dimen/dp_54"
                    android:background="@drawable/bg_shap_button_7"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:text="分享给访客"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>
        </RelativeLayout>
    </com.xiaoanjujia.common.util.MyScrollView>


</LinearLayout>