<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/ll_knowledge_publish_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    >

    <include layout="@layout/jkx_public_title_home" />


    <com.xiaoanjujia.common.util.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="483dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dp_5"
                android:background="@drawable/address_bg_mess"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_94"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/huzhu_iv"
                        android:layout_width="@dimen/dp_76"
                        android:layout_height="@dimen/dp_76"
                        android:layout_marginLeft="@dimen/dp_41"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:scaleType="centerCrop"
                        android:src="#D8D8D8" />

                    <TextView
                        android:id="@+id/huzhu_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_17"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_494949"
                        android:textSize="@dimen/sp_24"
                        tool:text="户主" />

                    <ImageView
                        android:id="@+id/sex_img"
                        android:layout_width="@dimen/dp_9"
                        android:layout_height="@dimen/sp_16"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:scaleType="fitXY"
                        android:src="@drawable/sex_man" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_53"
                    android:layout_marginTop="@dimen/dp_26"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/sp_14"
                        android:layout_gravity="center"
                        android:src="@drawable/mess_phone_icon" />

                    <TextView
                        android:id="@+id/phone_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:textColor="@color/color_494949"
                        android:textSize="@dimen/sp_14"
                        tool:text="13701090917" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_53"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_13"
                        android:layout_height="@dimen/sp_17"
                        android:layout_gravity="center"
                        android:src="@drawable/id_icon" />

                    <TextView
                        android:id="@+id/id_card_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:textColor="@color/color_494949"
                        android:textSize="@dimen/sp_14"
                        tool:text="141125********0058" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/face_pic_visibility"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_18"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_18"
                            android:text="人脸照片："
                            android:textColor="@color/color_494949"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/color_C5C3C3"
                            android:textSize="@dimen/sp_10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/white"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/uploading_special_certificate_iv"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_add_image"
                            android:visibility="gone" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/uploading_special_certificate_rv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:overScrollMode="never"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="（最多一张）"
                            android:textColor="@color/bg_red"
                            android:textSize="10sp" />

                        <com.xiaoanjujia.common.widget.alphaview.AlphaButton
                            android:id="@+id/generate_visitor_uploading_face_pic"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_42"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_8"
                            android:background="@drawable/bg_shap_button_select"
                            android:gravity="center"
                            android:text="上传人脸"
                            android:textColor="@color/color_2AAD67"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>



                </LinearLayout>


                <com.xiaoanjujia.common.widget.alphaview.AlphaButton
                    android:id="@+id/generate_visitor_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_42"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_30"

                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_32"
                    android:background="@drawable/bg_shap_button_select"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="重新采集人脸"
                    android:textColor="@color/color_2AAD67"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
        </LinearLayout>
    </com.xiaoanjujia.common.util.MyScrollView>


</LinearLayout>